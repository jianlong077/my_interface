<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.haichao.blog.blog.mapper.BlogDetailsMapper" >
    <resultMap id="BaseResultMapVO" type="com.haichao.blog.blog.entity.vo.BlogDetailsVO" extends="BaseResultMap">
        <!-- <association property="employee" column="code" select="com.my.erp.bd.mapper.EmployeeMapper.findByAccountCode">
            </association>
            <collection property="menus" column="code" select="com.my.erp.sys.mapper.MenuMapper.findListByAccountCOde">
            </collection>
        -->
    </resultMap>
    <!-- 根据code查询 -->
    <select id="findById" resultMap="BaseResultMapVO"  parameterType="java.lang.String" >
            select a.* from blog_details a where a.cguid = #{cguid,jdbcType=VARCHAR};
    </select>
    <select id="findTopList" resultMap="BaseResultMapVO" >
        select b.* from blog_details_top a left join blog_details b on a.cguid=b.cguid where b.status=2 order by b.llast_time DESC
    </select>
    <!-- 根据条件查询List -->
    <select id="findList" resultMap="BaseResultMapVO"  parameterType="java.util.Map">
            select a.* from blog_details a
    <where>

    <if test="cguid != null" >
            and cguid=#{cguid}
    </if>
    <if test="classId != null" >
            and class_id=#{classId}
    </if>
    <if test="tagId != null" >
            and tag_id=#{tagId}
    </if>
    <if test="status != null" >
            and status=#{status}
    </if>
    <if test="name != null" >
            and name=#{name}
    </if>
    <if test="details != null" >
            and details=#{details}
    </if>
    <if test="userId != null" >
            and user_id=#{userId}
    </if>
    </where>
    </select>
    <!-- 根据code删除 -->
    <delete id="deleteById" parameterType="java.lang.String" >
            delete from  blog_details where  cguid= #{cguid,jdbcType=VARCHAR};
    </delete>
    <update id="audit"  parameterType="java.lang.String" >
        update blog_details set status=2  where cguid = #{cguid,jdbcType=VARCHAR};
    </update>
    <update id="unAudit"  parameterType="java.lang.String" >
        update blog_details set status=1  where cguid = #{cguid,jdbcType=VARCHAR};
    </update>
</mapper>